{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./types"],
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": false
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
} 